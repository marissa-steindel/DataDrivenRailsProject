<div class="container" >
  <h1>Authors - Collection</h1>

  <% if @authors.empty? %>
  <% else %>
    <% @authors.each do |author| %>
      <h2> <%= link_to author.name, author %> </h2>
      <p><%= author.name %> has written <%= pluralize(author.books.count, "book") %>.</p>
    <% end %>
  <% end %>
</div>

